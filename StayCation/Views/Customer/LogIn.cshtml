@model StayCation.Models.Customer

@{
    ViewBag.Title = "Login Page";
}

<head>
    <link rel="stylesheet" href="~/css/style4signUp.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
</head>

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="d-flex align-items-left h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form style="width: 23rem;" action="@Url.Action("LogIn", "Customer")" method="post">

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>
                        <div class="form-outline mb-4">
                            <label asp-for="Email" class="form-label" for="form2Example18"></label>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required" })

                            @*<input asp-for="Email" id="form2Example18" class="form-control form-control-lg" />*@
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="loader"></div>

                        <div class="form-outline mb-4 form-group">
                            <label asp-for="Password" class="form-label" for="form2Example28"></label>
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", required = "required" })
                            @*<input asp-for="Password" id="form2Example18" class="form-control form-control-lg" />*@
                            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                            
                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block" type="submit" style=" background-color: #0000FF; color:white">Login</button>
                        </div>

                        <p class="small mb-5 pb-lg-2"><a class="text-muted" asp-controller="Customer" asp-action="ForgetPwd">Forgot password?</a></p>
                        <p>Don't have an account? <a asp-controller="Customer" asp-action="SignUp" class="link-info">Sign Up</a></p>

                    </form>

                    @section Scripts {
                        @{
                            <partial name="_ValidationScriptsPartial" />
                        }
                    }
                </div>

            </div>
            @*<div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/img/Hotelbackground.jpg"
                     class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>*@
        </div>
    </div>
</section>

